    <azim_spacing>0.05</azim_spacing>
    <z_spacing>0.75</z_spacing>
  </quadrature>

  <ray_tracing segmentation="OTF Stacks" z_mesh="Local">
    <zones>-182.88, 0, 182.88</zones>
    <modules>1, 1, 1</modules>
  </ray_tracing>

  <solver type="CPU Solver" max_iterations="5000" tolerance="1E-4"/>

