  <geometry lattice_refines="0, 0, 50">
    <path>cases/beavrs/geometry.xml</path>
  </geometry>

  <materials path="cases/beavrs/beavrs-mgxs.h5"/>

  <tally>
    <reaction_rates>F, T, PHI</reaction_rates>
    <cross_sections>none</cross_sections>
    <tracks>none</tracks>

    <mesh type="rectangle">
      <shape>
          (0.04318 + [1.25984]*17 + 0.04318)*10,
          (0.04318 + [1.25984]*17 + 0.04318)*10,
          [7.3152]*50</shape>
    </mesh>
